<html>
  <head>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="m-10">
    <img
      src="https://res.cloudinary.com/dlidl2li4/image/upload/v1686925035/DuitHive/Group_3_paqhen.png"
      alt="logo"
      class="h-12"
    />
    <div class="mt-4 inline-block w-auto border border-black p-2">
      <p class="font-semibold">{{startDate}} - {{endDate}}</p>
    </div>
    <table class="mt-10 w-full px-3">
      <tr class="border-b border-[#8595ab] bg-[#eceef2] p-8">
        <th class="py-2 pl-2 text-left font-medium">
          Name
        </th>
        <th class="py-2 text-left font-medium">
          Date
        </th>
        <th class="py-2 text-left font-medium">
          Category
        </th>
        <th class="py-2 pr-2 text-right font-medium">
          Amount
        </th>
      </tr>
      {{#each expenses as |expense|}}
        <tr class="border-b border-[#b0bac9] py-2">
          <td class="py-2 pl-2">
            {{expense.description}}
          </td>
          <td class="py-2">
            {{dateFormat expense.transactionDate}}
          </td>
          <td class="py-2">
            {{expense.category.name}}
          </td>
          <td class="py-2 pr-2 text-right">
            {{amountFormat expense.amount}}
          </td>
        </tr>
      {{/each}}
      <tr>
        <td>
        </td>
        <td>
        </td>
        <td>
        </td>
        <td class="py-2 pr-2 text-right">
          <span class="border-b border-double border-[#b0bac9] pt-2">
            <span class="border-b border-double border-[#b0bac9] py-2">
              Total:
              {{currency}}{{totalAmountFormat totalAmount}}
            </span>
          </span>
        </td>
      </tr>
    </table>
  </body>
</html>